mkbuilddir: compdll
	powershell -command rm *.o

compdll: linkobjs
	gcc -s -shared swapi.o -o swapi.dll

linkobjs: window.o basicelements.o menus.o messagebox.o
	ld -relocatable window.o basicelements.o menus.o -o swapi.o messagebox.o

all: 

window.o:
	gcc -I. -c src\window.c

basicelements.o:
	gcc -I. -c src\Elements\basicelements.c

menus.o:
	gcc -I. -c src\Elements\menus.c

messagebox.o:
	gcc -I. -c src\OtherWindows\messagebox.c

